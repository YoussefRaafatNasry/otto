<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_dark_grey"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
            android:id="@+id/pattern_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rectangle_black"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/reply_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="8dp"
            android:autoLink="web"
            android:background="@drawable/rectangle_black"
            android:textSize="14sp" />

    <LinearLayout
            android:id="@+id/template_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:alpha=".8"
            android:gravity="end">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/template"
                android:textSize="12sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/template_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/command_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:alpha=".8"
            android:gravity="end">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/command"
                android:textSize="12sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/command_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>